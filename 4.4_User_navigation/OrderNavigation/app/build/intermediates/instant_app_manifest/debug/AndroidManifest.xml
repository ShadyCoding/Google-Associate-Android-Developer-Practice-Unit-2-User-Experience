<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shady.ordernavigation"
    android:targetSandboxVersion="2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="28" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.shady.ordernavigation.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.shady.ordernavigation.SecondActivity"
            android:label="@string/title_activity_second"
            android:parentActivityName="com.shady.ordernavigation.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.shady.ordernavigation.MainActivity" />
        </activity>
        <activity
            android:name="com.shady.ordernavigation.ThirdActivity"
            android:label="@string/title_activity_third"
            android:parentActivityName="com.shady.ordernavigation.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.shady.ordernavigation.MainActivity" />
        </activity>
        <activity
            android:name="com.shady.ordernavigation.FourthActivity"
            android:label="@string/title_activity_fourth"
            android:parentActivityName="com.shady.ordernavigation.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.shady.ordernavigation.MainActivity" />
        </activity>
    </application>

</manifest>